<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
		<tr>
			<% direction = params[:direction] == "asc" ? "desc" : "asc"  %>
			<th><%= link_to "Title", :sort => "title",
							:direction => direction %></th>
			<th><%=  link_to "Genre", :sort => "release_date",
							:direction => direction %></th>
			<th><%=  link_to "Release Date",:sort => "genre",
							:direction => direction %></th>
		</tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.genre %></td>
        <td><%= link_to 'See reviews', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path %>
